@model OAY.Models.Mail
  
@{
    ViewBag.Title = "Contact Us";
    ViewBag.Description = "Charter our Yacht with captain for a unique summer experience in the Oslofjord.";
    ViewBag.Keywords = "Oslofjorden, Summer, Sightseeing";
    Layout = "~/Views/Shared/_LayoutEnglish.cshtml";
}

@section scripts {
    <script>
        $(document).ready(function () {
            if ('@ViewBag.Status' == 'Sent') {
                $('#success-msg-container').show();
                setTimeout(function () { $("#success-msg-container").hide(); }, 5000);
            }
            if ('@ViewBag.Status' == 'Feil') {
                $('#fail-msg-container').show();
                setTimeout(function () { $("#fail-msg-container").hide(); }, 5000);
            }
        });
    </script>
}


