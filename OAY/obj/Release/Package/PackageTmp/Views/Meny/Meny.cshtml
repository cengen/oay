@model OAY.Web.ViewModels.MenyListeViewModel

@{
    ViewBag.Title = "Lunsjcruise i Oslofjorden";
    ViewBag.Description = "Lunsjcruise i Oslofjorden. Båtturer i Oslos skjærgård. Lunsj med kollegaer eller venner";
    ViewBag.Keywords = "Oslofjorden, Båttur, Lunsjcruise, Oslo";
}

@section scripts {
    <script>

        $(function () {
            var viewModel = function () {
                var self = this;
                self.forretter = ko.observableArray(@Html.Raw(Model.ForrettListeJson));
                self.hovedretter = ko.observableArray(@Html.Raw(Model.HovedrettListeJson));
                self.desserter = ko.observableArray(@Html.Raw(Model.DessertListeJson));
                self.rodviner = ko.observableArray(@Html.Raw(Model.RodvinListeJson));
                self.hvitviner = ko.observableArray(@Html.Raw(Model.HvitvinListeJson));
                self.likorer = ko.observableArray(@Html.Raw(Model.LikorListeJson));
                self.aperitiffer = ko.observableArray(@Html.Raw(Model.AperitiffListeJson));
                self.diverse = ko.observableArray(@Html.Raw(Model.DiverseListeJson));

            };
            var vm = new viewModel();

            ko.applyBindings(vm);

        });
    </script>
}


<div class="main">
     <div class="container">
         <figure><img src="~/Images/Meny/matOgDrikke.jpg" class="img-rounded" alt="Fersk sjømat"></figure>
         <section class="hgroup">
             <h1 class="section_header fancy centered">Meny</h1>
            
             <ul class="breadcrumb pull-right">
                 <li>@Html.ActionLink("Hjem", "Index", "Home")</li>
                 <li class="active">Meny</li>
             </ul>
         </section>
      
                            
        <div class="service_teaser elegant">
            <div class="row">
                <div class="service_photo col-sm-4 col-md-4">
                    <figure style="background-image:url(/Images/Meny/forrett.png)"></figure>
                </div>
                <div class="service_details col-sm-8 col-md-8" >
                        <h2 class="section_header elegant"><b>Forrett</b><small> en god start på et godt måltid</small></h2>
                    <ul class="meny" data-bind="foreach: forretter">
                        <li class="list-group-item">
                            <span data-bind="text: beskrivelse"></span>
                            <span class="pull-right" data-bind="text: pris + ',-'"></span>
                        </li>
                    </ul>                               
                </div>
            </div>
        </div>
                                 
        <div class="service_teaser elegant">
            <div class="row"> 
                <div class="service_photo col-sm-4 col-md-4">
                    <figure style="background-image:url(/Images/Meny/hovedrett.jpg)"></figure>
                </div>                         
                <div class="service_details col-sm-8 col-md-8">
                    <h2 class="section_header elegant"><b>Hovedrett</b><small> havets delikatesser eller saftig kjøtt</small></h2>
                    <ul class="meny" data-bind="foreach: hovedretter">
                        <li class="list-group-item">
                            <span data-bind="text: beskrivelse"></span>
