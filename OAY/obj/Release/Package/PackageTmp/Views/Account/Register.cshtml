@model OAY.Web.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<div class="main">
    <div class="container">
        <section class="hgroup">
            <h1>Registrer ny admin-bruker for oceanadventure.no</h1>
            <ul class="breadcrumb pull-right">
                <li>@Html.ActionLink("Hjem", "Index", "Home")</li>
                <li class="active">Registrer</li>
            </ul>
        </section>

        <section>
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <div class="signin">
                        <div class="social_sign">
                            <h3>Registrer ny bruker</h3>
                            <a><i class="fa fa-user"></i></a>
                        </div>
                        <div class="row">
                            <div class="col-lg-2"></div>
                            <div class="form col-lg-8" centered>
                              @using (Html.BeginForm())
                              {

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary()

                                <fieldset>
                                    <legend>Ny admin-bruker</legend>
                                    <ol>
                                        <li>
                                            @Html.LabelFor(m => m.UserName)
                                            @Html.TextBoxFor(m => m.UserName)
                                        </li>
                                        <li>
                                            @Html.LabelFor(m => m.Password)
                                            @Html.PasswordFor(m => m.Password)
                                        </li>
                                        <li>
                                            @Html.LabelFor(m => m.ConfirmPassword)
                                            @Html.PasswordFor(m => m.ConfirmPassword)
                                        </li>
                                    </ol>
                                    <input type="submit" value="Register" />
                                </fieldset>
                              }
                            </div>
                            <div class="col-lg-2"></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
